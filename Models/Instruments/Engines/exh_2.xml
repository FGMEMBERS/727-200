<PropertyList>

<path>instr_exh.ac</path>

	<animation>
		<name>exh2</name>
		<object-name>face</object-name>
		<object-name>bezel</object-name>
		<object-name>needle</object-name>
		<object-name>shadow</object-name>
	</animation>

	<animation>
		<type>material</type>
		<object-name>face</object-name>
		<object-name>needle</object-name>
		  <emission>
    <red>0.5</red>
    <green>0.5</green>
    <blue>0.5</blue>
  </emission>
	</animation>
	
	<animation>
		<type>material</type>
		<object-name>face</object-name>
		<object-name>needle</object-name>
		<object-name>shadow</object-name>
		<condition>
			<not><property>/sim/rendering/rembrandt/enabled</property></not>
			<property>/systems/electrical/outputs/cabin-dim</property>
		</condition>
		<emission>
		  <red>0.8</red>
		  <green>0.8</green>
		  <blue>0.8</blue>
		  <factor-prop>/systems/electrical/outputs/cabin-dim</factor-prop>
		</emission>
	</animation>	

	<animation>
		<type>noshadow</type>
		<object-name>shadow</object-name>
	</animation>

	<effect>
		<inherits-from>Effects/model-transparent</inherits-from>
		<object-name>shadow</object-name>
  </effect>

	<animation>
		<type>rotate</type>
		<object-name>needle</object-name>
		<property>/engines/engine[1]/egt-actual</property>
		<interpolation>
		  <entry><ind>  0.0</ind><dep>  0.0</dep></entry>
		  <entry><ind>950.0</ind><dep>255.0</dep></entry>
		</interpolation>
		<center>
			<x-m>0.0</x-m>
			<y-m>-0.00069</y-m>
			<z-m>0.00022</z-m>
		</center>
		<axis>
		  <x>-1</x>
		  <y>0</y>
		  <z>0</z>
		</axis>
	</animation>

</PropertyList>
