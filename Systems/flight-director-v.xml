<PropertyList>

 <!-- =============================================================== -->
 <!-- Autopilot Helpers                                               -->
 <!-- =============================================================== -->

	<filter>
		<name>HEADING ERROR DEG</name>
		<debug>false</debug>
		<type>gain</type>
		<input>
			<condition>
				<and>
					<equals>
						<property>/autopilot-v/internal/fd-lat</property>
						<value>0</value>
					</equals>
					<equals>
						<property>/it-autoflight/input/trk</property>
						<value>0</value>
					</equals>
				</and>
			</condition>
			<property>/it-autoflight/input/hdg</property>
			<offset>
				<property>/it-autoflight/internal/heading-deg</property>
				<scale>-1.0</scale>
			</offset>
		</input>
		<input>
			<condition>
				<and>
					<equals>
						<property>/autopilot-v/internal/fd-lat</property>
						<value>0</value>
					</equals>
					<equals>
						<property>/it-autoflight/input/trk</property>
						<value>1</value>
					</equals>
				</and>
			</condition>
			<property>/it-autoflight/input/hdg</property>
			<offset>
				<property>/it-autoflight/internal/track-deg</property>
				<scale>-1.0</scale>
			</offset>
		</input>
		<input>
			<condition>
				<not-equals>
					<property>/autopilot-v/internal/fd-lat</property>
					<value>0</value>
				</not-equals>
			</condition>
			<value>0</value>
		</input>
		<output>/autopilot-v/internal/heading-error-deg</output>
		<period>
			<min>-180</min>
			<max>180</max>
		</period>
		<gain>1.0</gain>
	</filter>

 <!-- =============================================================== -->
 <!-- Roll Bar Command                                                -->
 <!-- =============================================================== -->
 
	<pi-simple-controller>
		<name>ROLL CONTROLLER: HDG</name>
		<debug>false</debug>
		<enable>
			<condition>
				<equals>
					<property>/autopilot-v/internal/fd-lat</property>
					<value>0</value>
				</equals>
			</condition>
		</enable>
		<input>
			<property>/autopilot-v/internal/heading-error-deg</property>
			<scale>
				<property>/it-autoflight/config/cmd/roll-scale</property>
			</scale>
		</input>
		<reference>
			<value>0</value>
		</reference>
		<output>
			<property>/autopilot-v/internal/target-roll-deg</property>
		</output>
		<config>
			<Kp>
				<property>/it-autoflight/config/cmd/roll-kp</property>
			</Kp>
			<Ki>0.0</Ki>
			<min>-25</min>
			<max>25</max>
		</config>
	</pi-simple-controller>
	
	<pi-simple-controller>
		<name>VORLOC TRK</name>
		<debug>false</debug>
		<enable>
			<condition>
				<equals>
					<property>/autopilot-v/internal/fd-lat</property>
					<value>2</value>
				</equals>
			</condition>
		</enable>
		<input>
			<property>/it-autoflight/internal/nav-heading-error-deg</property>
		</input>
		<reference>
			<value>0.0</value>
		</reference>
		<output>
			<property>/autopilot-v/internal/target-roll-deg</property>
		</output>
		<config>
			<Kp>
				<property>/it-autoflight/config/cmd/vorloc</property>
			</Kp>
			<Ki>0.0001</Ki>	
			<min>-25</min>
			<max>25</max>
		</config>
	</pi-simple-controller>
	
	<filter>
		<name>ROLL DEG SYNC</name>
		<debug>false</debug>
		<type>gain</type>
		<gain>1</gain>
		<enable>
			<condition>
				<and>
					<not-equals>
						<property>/autopilot-v/internal/fd-lat</property>
						<value>0</value>
					</not-equals>
					<not-equals>
						<property>/autopilot-v/internal/fd-lat</property>
						<value>2</value>
					</not-equals>
				</and>
			</condition>
		</enable>
		<input>/orientation/roll-deg</input>
		<output>/autopilot-v/internal/target-roll-deg</output>
		<min>-25</min>
		<max>25</max>
	</filter>
 
	<filter>
		<name>IT-CONTROLLER: TARGET ROLL CMD</name>
		<debug>false</debug>
		<feedback-if-disabled>true</feedback-if-disabled>
		<initialize-to>output</initialize-to>
		<input>
			<property>/autopilot-v/internal/target-roll-deg</property>
		</input>
		<output>/autopilot-v/internal/target-roll-output</output>
		<type>noise-spike</type>
		<max-rate-of-change>15</max-rate-of-change>
	</filter>
	
	<filter>
		<name>FD: ROLL</name>
		<debug>false</debug>
		<type>noise-spike</type>
		<input>
			<condition>
				<and>
					<not-equals>
						<property>/autopilot-v/fd-mode-knob</property>
						<value>2</value>
					</not-equals>
					<not-equals>
						<property>/autopilot-v/internal/fd-lat</property>
						<value>1</value>
					</not-equals>
				</and>
			</condition>
			<expression>
				<dif>
					<property>/autopilot-v/internal/target-roll-output</property>
					<property>/orientation/roll-deg</property>
				</dif>
			</expression>
		</input>
		<input>
			<condition>
				<and>
					<not-equals>
						<property>/autopilot-v/fd-mode-knob</property>
						<value>2</value>
					</not-equals>
					<equals>
						<property>/autopilot-v/internal/fd-lat</property>
						<value>1</value>
					</equals>
				</and>
			</condition>
			<expression>
				<dif>
					<value>0</value>
					<property>/orientation/roll-deg</property>
				</dif>
			</expression>
		</input>
		<input>0</input>
		<output>/autopilot-v/fd/roll-bar-cmd</output>
		<min>-30</min>
		<max>30</max>
		<max-rate-of-change>40</max-rate-of-change>
	</filter>
	
	<filter>
		<name>FD: ROLL BAR</name>
		<debug>false</debug>
		<type>noise-spike</type>
		<input>
			<expression>
				<sum>
					<property>/autopilot-v/fd/roll-bar-cmd</property>
					<table>
						<property>/autopilot-v/fd-mode-knob</property> 
						<entry><ind>1</ind><dep>-129.1</dep></entry>
						<entry><ind>2</ind><dep>   0.0</dep></entry>
						<entry><ind>3</ind><dep>-129.1</dep></entry>
					</table>
				</sum>
			</expression>
		</input>
		<output>/autopilot-v/fd/roll-bar</output>
		<max-rate-of-change>240</max-rate-of-change>
	</filter>

 <!-- =============================================================== -->
 <!-- Pitch Bar Command                                               -->
 <!-- =============================================================== -->
 
	<filter>
		<name>ALTITUDE CAPTURE/HOLD</name>
		<debug>false</debug>
		<type>gain</type>
		<input>
			<property>/it-autoflight/internal/altitude-5-sec-ahead</property>
		</input>
		<reference>
			<property>/autopilot-v/internal/fd-alt</property>
		</reference>
		<gain>-8</gain>
		<output>
			<property>/autopilot-v/internal/target-fd-fpm</property>
		</output>
		<min>-1000</min>
		<max>1000</max>
	</filter>
 
	<filter>
		<name>TARGET FPM</name>
		<debug>false</debug>
		<type>gain</type>
		<gain>1</gain>
		<input>
			<condition>
				<equals>
					<property>/autopilot-v/internal/fd-vert</property>
					<value>0</value>
				</equals>
			</condition>
			<property>/autopilot-v/internal/target-fd-fpm</property>
		</input>
		<input>
			<condition>
				<and>
					<equals>
						<property>/autopilot-v/internal/fd-vert</property>
						<value>2</value>
					</equals>
					<equals>
						<property>/it-autoflight/settings/use-nav2-radio</property>
						<value>0</value>
					</equals>
				</and>
			</condition>
			<property>/it-autoflight/internal/nav1-rate-of-climb-fpm</property>
		</input>
		<input>
			<condition>
				<and>
					<equals>
						<property>/autopilot-v/internal/fd-vert</property>
						<value>2</value>
					</equals>
					<equals>
						<property>/it-autoflight/settings/use-nav2-radio</property>
						<value>1</value>
					</equals>
				</and>
			</condition>
			<property>/it-autoflight/internal/nav2-rate-of-climb-fpm</property>
		</input>
		<input>
			<property>/it-autoflight/internal/vert-speed-fpm</property>
		</input>
		<output>/autopilot-v/fd/target-common-fpm</output>
	</filter>
	
	<filter>
		<name>FD: PITCH</name>
		<debug>false</debug>
		<type>noise-spike</type>
		<input>
			<condition>
				<and>
					<not-equals>
						<property>/autopilot-v/fd-mode-knob</property>
						<value>2</value>
					</not-equals>
					<equals>
						<property>/autopilot-v/internal/fd-vert</property>
						<value>1</value>
					</equals>
				</and>
			</condition>
			<expression>
				<dif>
					<property>/it-autoflight/input/pitch-deg</property>
					<property>/orientation/pitch-deg</property>
				</dif>
			</expression>
		</input>
		<input>
			<condition>
				<and>
					<not-equals>
						<property>/autopilot-v/fd-mode-knob</property>
						<value>2</value>
					</not-equals>
					<equals>
						<property>/autopilot-v/internal/fd-vert</property>
						<value>3</value>
					</equals>
				</and>
			</condition>
			<expression>
				<dif>
					<value>10</value>
					<property>/orientation/pitch-deg</property>
				</dif>
			</expression>
		</input>
		<input>
			<condition>
				<and>
					<not-equals>
						<property>/autopilot-v/fd-mode-knob</property>
						<value>2</value>
					</not-equals>
					<or>
						<equals>
							<property>/autopilot-v/internal/fd-vert</property>
							<value>0</value>
						</equals>
						<equals>
							<property>/autopilot-v/internal/fd-vert</property>
							<value>2</value>
						</equals>
					</or>
				</and>
			</condition>
			<expression>
				<product>
					<dif>
						<property>/autopilot-v/fd/target-common-fpm</property>
						<property>/it-autoflight/internal/vert-speed-fpm</property>
					</dif>
					<table>
						<property>/instrumentation/airspeed-indicator/indicated-mach</property> 
						<entry><ind>0.20</ind><dep>0.004</dep></entry>
						<entry><ind>0.95</ind><dep>0.002</dep></entry>
					</table>
				</product>
			</expression>
		</input>
		<input>0</input>
		<output>/autopilot-v/fd/pitch-bar-cmd</output>
		<min>-10</min>
		<max>15</max>
		<max-rate-of-change>10</max-rate-of-change>
	</filter>
	
	<filter>
		<name>FD: PITCH BAR</name>
		<debug>false</debug>
		<type>noise-spike</type>
		<input>
			<expression>
				<sum>
					<property>/autopilot-v/fd/pitch-bar-cmd</property>
					<table>
						<property>/autopilot-v/fd-mode-knob</property> 
						<entry><ind>1</ind><dep>-60.8</dep></entry>
						<entry><ind>2</ind><dep>  0.0</dep></entry>
						<entry><ind>3</ind><dep>-60.8</dep></entry>
					</table>
				</sum>
			</expression>
		</input>
		<output>/autopilot-v/fd/pitch-bar</output>
		<max-rate-of-change>80</max-rate-of-change>
	</filter>

</PropertyList>
